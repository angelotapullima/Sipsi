<LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right"
        android:weightSum="9"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:src="@drawable/posible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:text="Filtrar"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:gravity="right|center"
            android:paddingRight="10dp"
            android:id="@+id/closeFiltro"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:text="X"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <CheckBox
                android:id="@+id/chAccidentes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accidentes  " />

            <CheckBox
                android:id="@+id/chDelitos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delitos  " />

            <CheckBox
                android:id="@+id/chBasura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basura" />

            <CheckBox
                android:id="@+id/chVial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vial  " />

            <CheckBox
                android:id="@+id/chCamaras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CÃ¡maras  " />

            <TextView
                android:id="@+id/tinicio"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/borde"
                android:gravity="center"
                android:hint=" Fecha Inicio"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tfinal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/borde"
                android:gravity="center"
                android:hint="Fecha final"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/filtro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:background="@drawable/verde"
                android:text="Filtrar" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>