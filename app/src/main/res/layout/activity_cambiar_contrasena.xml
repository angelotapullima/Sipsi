<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ToolbarColoredBackArrow"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña Antigua"

            android:textSize="15sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="#000"
            android:id="@+id/contraAntigua"
            android:background="@drawable/borde_gris_texto"
            android:hint="Ingresar Contraseña Antigua"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña Nueva"
            android:layout_marginTop="10dp"
            android:textSize="15sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="#000"
            android:id="@+id/contraNueva"
            android:background="@drawable/borde_gris_texto"
            android:hint="Ingresar Contraseña Nueva"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Repetir Contraseña "

            android:textSize="15sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="#000"
            android:id="@+id/contraNuevaRepetida"
            android:background="@drawable/borde_gris_texto"
            android:hint="Ingresar Contraseña "/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cambio de Contraseña"
            android:layout_marginTop="20dp"
            android:id="@+id/btnCambiarContra"
            android:background="@drawable/verde"
            android:textColor="#fff"/>

    </LinearLayout>



</LinearLayout>