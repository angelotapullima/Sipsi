<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.ParteFragment">

    <!-- TODO: Update blank fragment layout -->


    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/frameMapa"
        android:visibility="gone"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <fragment
                android:id="@+id/map_Apoyo"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DireFrame"
                android:text="cargando..."
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/verde"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/iconos"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completado"
                android:id="@+id/Completado"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/verde"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/arriba"
        android:background="@color/colorPrimaryDark"
        android:layout_height="150dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="#FFF"
            android:id="@+id/titulo"
            android:text="Parte Apoyo"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="28dp"/>



    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-60dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#FFF"
            android:orientation="vertical"
            android:paddingTop="22dp"
            android:paddingBottom="22dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Destinatario"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="12dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/Destinatario"
                    android:background="@drawable/inputtext"
                    android:hint="Destinatario"
                    android:inputType="textPersonName" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Asunto"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="12dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/inputtext"
                    android:hint="Asunto"
                    android:id="@+id/Asunto"
                    android:inputType="textEmailAddress" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="8"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Fecha "
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18sp" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/inputtext"
                                android:hint="Ingresar Fecha"
                                android:gravity="center"
                                android:id="@+id/Fecha"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Hora "
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18sp" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/inputtext"
                                android:hint="Ingresar Hora"
                                android:gravity="center"
                                android:id="@+id/Hora"/>

                        </LinearLayout>

                    </LinearLayout>






                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Vehiculo"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spn_vehiculo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/inputtext"
                    android:layout_marginBottom="15dp"
                    android:popupBackground="@color/colorCeniza" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Dirección"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />


                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/calle"
                    android:layout_height="45dp"
                    android:paddingLeft="12dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/inputtext"
                    android:hint="Ingresar calle"
                    android:inputType="text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/layoutAccidente"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="Causa"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_causas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="right"
                        android:background="@drawable/inputtext"
                        android:layout_marginBottom="15dp"
                        android:popupBackground="@color/colorCeniza" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/layoutDelito"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="Tipo de delito"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/TipoDelito"
                        android:layout_height="45dp"
                        android:paddingLeft="12dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@drawable/inputtext"
                        android:hint="Ingresar Tipo de delito"
                        android:inputType="text" />



                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Descripción"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />




                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/Descripcion"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:maxLines="3"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/inputtext"
                    android:hint="Ingresar Descripción"
                    android:lines="3"
                    android:padding="5dp"
                    android:scrollbars="vertical"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnMapaApoyo"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Seleccionar UBICACIÓN en el mapa"
                    android:background="@drawable/verde"
                    android:textColor="@color/white"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/borde"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/colorPrimaryDark"
                            android:text="Involucrados"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="9"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="Persona 1"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:id="@+id/mas1"
                                    android:layout_height="45dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/mas_xd"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Nombres"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18sp" />


                            <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/nombresP1"
                                android:layout_height="45dp"
                                android:paddingLeft="12dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/inputtext"
                                android:hint="Ingresar Nombres"
                                android:inputType="text" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Dni"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18sp" />


                            <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/DniP1"
                                android:layout_height="45dp"
                                android:paddingLeft="12dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/inputtext"
                                android:hint="Ingresar Dni"
                                android:inputType="number" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Edad"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18sp" />


                            <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/EdadP1"
                                android:layout_height="45dp"
                                android:paddingLeft="12dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/inputtext"
                                android:hint="Ingresar Edad"
                                android:inputType="number" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:visibility="gone"
                            android:layout_marginTop="5dp"
                            android:id="@+id/view2"
                            android:background="@color/colorPrimaryDark"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/layoutP2"
                            android:visibility="gone"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="9"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="Persona 2"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:id="@+id/mas2"
                                    android:layout_height="45dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/mas_xd"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Nombres"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18sp" />


                            <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/nombresP2"
                                android:layout_height="45dp"
                                android:paddingLeft="12dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/inputtext"
                                android:hint="Ingresar Nombres"
                                android:inputType="text" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Dni"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18sp" />


                            <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/DniP2"
                                android:layout_height="45dp"
                                android:paddingLeft="12dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/inputtext"
                                android:hint="Ingresar Dni"
                                android:inputType="number" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Edad"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18sp" />


                            <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/EdadP2"
                                android:layout_height="45dp"
                                android:paddingLeft="12dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/inputtext"
                                android:hint="Ingresar Edad"
                                android:inputType="number" />

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:visibility="gone"
                            android:id="@+id/view3"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorPrimaryDark"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/layoutP3"
                            android:visibility="gone"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="9"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="Persona 3"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="45dp"
                                    android:layout_weight="1"
                                    android:visibility="invisible"
                                    android:src="@drawable/mas_xd"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Nombres"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18sp" />


                            <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/nombresP3"
                                android:layout_height="45dp"
                                android:paddingLeft="12dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/inputtext"
                                android:hint="Ingresar Nombres"
                                android:inputType="text" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Dni"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18sp" />


                            <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/DniP3"
                                android:layout_height="45dp"
                                android:paddingLeft="12dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/inputtext"
                                android:hint="Ingresar Dni"
                                android:inputType="number" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Edad"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18sp" />


                            <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/EdadP3"
                                android:layout_height="45dp"
                                android:paddingLeft="12dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/inputtext"
                                android:hint="Ingresar Edad"
                                android:inputType="number" />

                        </LinearLayout>



                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_parte"
                    style="?android:textAppearanceSmall"
                    android:background="@drawable/accent"
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Registrar"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>